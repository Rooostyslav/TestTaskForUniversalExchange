@{
	ViewData["Title"] = "Галерея";
}

<div class="row text-center">
	@for (int i = 1; i <= 20; i++)
	{
		string fileName = $"{i}.jpg";

		<div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
			<div class="gallery-image">
				<a href="~/images/@fileName" data-fancybox="gallery">
					<img class="img-fluid" src="~/images/@fileName" alt="image" />
				</a>
			</div>
		</div>
	}
</div>