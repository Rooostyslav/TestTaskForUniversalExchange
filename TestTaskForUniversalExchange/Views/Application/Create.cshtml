@model Application
@{
	ViewData["Title"] = "Отправить заявку";
}

@if (ViewBag.Success)
{
	<div class="alert alert-success" role="alert">
		Заявка успешно отправлена!
	</div>
	<a class="btn btn-secondary" asp-controller="Home" asp-action="Index" >Вернуться на главную</a>
}
@if (!ViewBag.Success)
{
	<form asp-action="Create" asp-controller="Application">
		<div>
			<div class="validation" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label for="fullName">Фамилия и Имя</label>
				<input class="form-control" type="text" name="fullName" asp-for="FullName" maxlength="40" required />
				<span style="color: red" asp-validation-for="FullName"></span>
			</div>
			<div class="form-group">
				<label asp-for="Age">Возраст</label>
				<input class="form-control" type="number" name="age" asp-for="Age" max="99" required />
				<span style="color: red" asp-validation-for="Age"></span>
			</div>
			<div class="form-group">
				<label for="experience">Стаж комерческой работы</label>
				<input class="form-control" type="number" name="experience" asp-for="Experience" max="99" required />
				<span style="color: red" asp-validation-for="Experience"></span>
			</div>
			<div class="form-group">
				<label for="email">Електронная почта</label>
				<input class="form-control" type="email" name="email" asp-for="Email" required />
				<span style="color: red" asp-validation-for="Email"></span>
			</div>
			<div class="form-group">
				<label for="mobilePhone">Мобильный телефон</label>
				<input class="form-control" type="text" name="mobilePhone" asp-for="MobilePhone" maxlength="13" required />
				<span style="color: red" asp-validation-for="MobilePhone"></span>
			</div>
			<div class="form-group">
				<label for="notes">Заметки</label>
				<textarea class="form-control" name="notes" asp-for="Notes" maxlength="1000"></textarea>
				<span style="color: red" asp-validation-for="Notes"></span>
			</div>
			<button class="btn btn-success" type="submit" title="Отправить заявку!">Отправить заявку!</button>
		</div>
		<div class="mt-3">
			<a class="btn btn-primary" asp-controller="Application" asp-action="GetAllApplicationsInDocument"
			   title="Получить все заявки" download="Все заявки.docx">
				Получить все заявки
			</a>
		</div>
	</form>
}

